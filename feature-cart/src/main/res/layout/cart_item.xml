<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dark_blue"
    android:background="@color/dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/phone_image"
            app:shapeAppearance="@style/roundedImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
           />


        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:gravity="center_vertical"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="180dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/mark_pro"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/price"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/mark_pro"
                android:textColor="@color/orange"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
           android:layout_gravity="center_vertical"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/blue_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/quantity_decrease"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove"/>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/mark_pro_bold"/>


                <ImageView
                    android:id="@+id/quantity_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"/>

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/trash_button"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash"
            android:layout_gravity="center"
            app:fabCustomSize="32dp"
            app:elevation="0dp"
            android:scaleType="centerInside"
            app:tint="@null"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            style="?attr/floatingActionButtonSmallStyle"
            android:backgroundTint="@color/dark_blue"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>