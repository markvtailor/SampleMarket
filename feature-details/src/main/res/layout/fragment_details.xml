<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailsFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/back_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_back"
           android:layout_gravity="end"
           app:fabSize="mini"
           app:elevation="0dp"
           android:scaleType="fitStart"
           app:tint="@null"
           app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
           style="?attr/floatingActionButtonSmallStyle"
           android:backgroundTint="@color/dark_blue"/>

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:layout_weight="1"
           android:gravity="center_horizontal"
           android:text="Product Details"
           android:textAllCaps="false"
           android:textColor="@color/dark_blue"
           android:fontFamily="@font/mark_pro"
           android:textStyle="bold"
           android:textSize="20sp"/>

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/to_basket_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_basket"
           app:fabSize="mini"
           app:elevation="0dp"
           app:tint="@null"
           app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
           style="?attr/floatingActionButtonSmallStyle"
           android:backgroundTint="@color/orange"/>

   </LinearLayout>


    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/item_images"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/gray"
        app:carouselType="SHOWCASE"
        app:showBottomShadow="false"
        app:showTopShadow="false"
        app:autoPlay="false"
        app:infiniteCarousel="false"
        app:scaleOnScroll="true"
        app:scalingFactor="0.1"
        app:carouselGravity="CENTER"
        app:imageScaleType="fitCenter"
        app:showIndicator="false"
        app:showNavigationButtons="false"
        app:carouselPadding="8dp"
        />

    <com.google.android.material.card.MaterialCardView
        style="@style/RoundedTopCardViewStyle"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        app:strokeWidth="0dp"
        android:layout_weight="2"
        android:layout_height="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Galaxy Note 20 Ultra"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/mark_pro_bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/favorites_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_white"
                    android:layout_gravity="end"
                    app:fabSize="mini"
                    app:elevation="0dp"
                    android:scaleType="fitStart"
                    app:tint="@null"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    style="?attr/floatingActionButtonSmallStyle"
                    android:backgroundTint="@color/dark_blue"/>


            </LinearLayout>

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:numStars="5"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:theme="@style/MyRatingBar"
               />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextAppearance="@android:style/TextAppearance.Material.Title"
                app:tabTextColor="@color/dark_gray"
                app:tabIndicatorColor="@color/orange"
                app:tabRippleColor="@color/orange"
                app:tabSelectedTextColor="@color/dark_blue">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    />




            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>